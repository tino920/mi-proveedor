# ðŸ“± PODFILE ULTRA-AGRESIVO - MiProveedor
# FIX DEFINITIVO: Limpia TANTO proyectos Pods COMO proyecto Runner principal
# SoluciÃ³n para baseConfigurationReference hardcoded en project.pbxproj

platform :ios, '13.0'

# Configuraciones CI/CD
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # ðŸ”¥ FLUTTER MANEJA TODAS LAS DEPENDENCIAS
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# ðŸ“± POST-INSTALL ULTRA-AGRESIVO
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # ðŸŽ¯ CONFIGURAR DEPLOYMENT TARGET
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
  
  puts "\nðŸ”§ APLICANDO FIX ULTRA-AGRESIVO..."
  
  # ðŸ”¥ FIX 1: LIMPIAR PROYECTOS PODS (como antes)
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_configurations.each do |config|
        config.base_configuration_reference = nil
      end
    end
    puts "âœ… Pods project base configurations limpiadas"
  end
  
  # ðŸ”¥ FIX 2: LIMPIAR PROYECTO PRINCIPAL RUNNER (NUEVO!)
  installer.aggregate_targets.each do |aggregate_target|
    aggregate_target.user_project.targets.each do |target|
      target.build_configurations.each do |config|
        # FORZAR que CocoaPods pueda aplicar su configuraciÃ³n
        config.base_configuration_reference = nil
        puts "ðŸŽ¯ Limpiando #{target.name} - #{config.name} baseConfigurationReference"
      end
    end
  end
  
  # ðŸ”¥ FIX 3: APLICAR CONFIGURACIONES COCOAPODS MANUALMENTE
  installer.aggregate_targets.each do |aggregate_target|
    aggregate_target.user_project.targets.each do |target|
      if target.name == 'Runner'
        target.build_configurations.each do |config|
          # Forzar configuraciones CocoaPods manualmente
          case config.name
          when 'Debug'
            xcconfig_path = installer.sandbox.target_support_files_dir + "Pods-#{target.name}" + "Pods-#{target.name}.debug.xcconfig"
            config.base_configuration_reference = installer.aggregate_targets[0].user_project.new_file(xcconfig_path) if File.exist?(xcconfig_path)
            puts "ðŸ”¥ Aplicando Debug CocoaPods config a Runner"
          when 'Release'
            xcconfig_path = installer.sandbox.target_support_files_dir + "Pods-#{target.name}" + "Pods-#{target.name}.release.xcconfig"
            config.base_configuration_reference = installer.aggregate_targets[0].user_project.new_file(xcconfig_path) if File.exist?(xcconfig_path)
            puts "ðŸ”¥ Aplicando Release CocoaPods config a Runner"
          when 'Profile'
            xcconfig_path = installer.sandbox.target_support_files_dir + "Pods-#{target.name}" + "Pods-#{target.name}.release.xcconfig"
            config.base_configuration_reference = installer.aggregate_targets[0].user_project.new_file(xcconfig_path) if File.exist?(xcconfig_path)
            puts "ðŸ”¥ Aplicando Profile CocoaPods config a Runner"
          end
        end
      end
    end
  end
  
  # âœ… MENSAJE DE Ã‰XITO
  puts "\nðŸŽ‰ Â¡FIX ULTRA-AGRESIVO APLICADO!"
  puts "ðŸ”¥ Proyecto Runner: baseConfigurationReference limpiado y reconfigurado"
  puts "ðŸ”¥ Proyectos Pods: baseConfigurationReference limpiado"  
  puts "ðŸŽ¯ CocoaPods: Ahora puede aplicar su configuraciÃ³n sin conflictos"
  puts "âœ… BoringSSL-GRPC y frameworks: DeberÃ­an encontrarse correctamente\n"
end
